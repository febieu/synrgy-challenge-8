<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ch8." parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ch8." parent="Base.Theme.ch8." />

    <style name="PrimaryButton">
        <item name="backgroundTint">#bb9457</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryEditText">
        <item name="fontFamily">@font/lato_bolditalic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppToolbarTitle">
        <item name="fontFamily">@font/paytoneone_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppToolbarTitleHome">
        <item name="fontFamily">@font/paytoneone_regular</item>
        <item name="android:textSize">20sp</item>

        <item name="android:padding">10dp</item>
    </style>

    <style name="TextTitle">
        <item name="fontFamily">@font/breeserif_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Desc">
        <item name="fontFamily">@font/ebgaramond_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PlaceText">
        <item name="fontFamily">@font/abel_regular</item>
        <item name="android:textSize">12sp</item>
    </style>
